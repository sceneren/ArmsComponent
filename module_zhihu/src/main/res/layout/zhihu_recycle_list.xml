<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/public_height_80dp"
    android:layout_marginLeft="@dimen/public_mar_left_5dp"
    android:layout_marginTop="@dimen/public_mar_top_3dp"
    android:layout_marginRight="@dimen/public_mar_right_5dp"
    android:layout_marginBottom="@dimen/public_mar_bottom_5dp"
    app:cardBackgroundColor="@color/public_white"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:contentPadding="8dp">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="#FF0000"
        android:textSize="@dimen/public_font_30sp"
        tools:text="ss" />
</androidx.cardview.widget.CardView>